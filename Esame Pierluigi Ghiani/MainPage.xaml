<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Esame_Pierluigi_Ghiani.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding=" 30,0"
            Spacing="25">
            <CollectionView
                x:Name="MyCollectionViews"
                SelectionMode="Single"
                SelectionChanged="OnSelectionChanged"
                ItemsSource="{Binding Items}">
                
                <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label
            Text="Binding Title"
             FontSize="20"
             Padding="10"/>
                </DataTemplate>
                    <DataTemplate>
                        <Label
              Text="{Binding Price}"
              FontSize="14"
              Padding="10"/>
                    </DataTemplate>
                    <DataTemplate>
                        <Image
                        Source="{Binding Image}"
                        HeightRequest="200"
                        WidthRequest="200"/>
                    </DataTemplate>
            </CollectionView.ItemTemplate>
            </CollectionView>

            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
